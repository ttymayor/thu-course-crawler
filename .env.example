# Database Configuration
# Name of the MongoDB database to use
DB_NAME=thu_course

# MongoDB connection URI
# Examples:
#   Local: mongodb://root:example@localhost:27017
#   Remote: mongodb://user:password@host:port
DB_URI=

# Environment mode: 'dev' or 'prod'
# In dev mode, collection names get '_dev' suffix and data limits apply
DB_ENV=dev

# Development mode data limit
# Limits the number of course details fetched in dev mode
DEV_DATA_LIMIT=100

# Academic Configuration
# Academic year (e.g., 114 for 2025-2026)
ACADEMIC_YEAR=114

# Academic semester (1 or 2)
ACADEMIC_SEMESTER=2
